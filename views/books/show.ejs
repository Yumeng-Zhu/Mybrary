<h2 class="page-header"><%= book.title %></h2>
<a href = "/books/<%= book.id %>">
<img width="100" height="150" src="<%= book.coverImagePath %>">
</a>
<div>
   author: <%= book.author.name %> 
   <!-- the aauthor is an object rather id due to the populate function in the router/book.js -->
</div>
<div>
    Published Date: <%= book.publishDate.toDateString()  %>
</div>
<div>
    Page Count: <%= book.pageCount %>
</div>
<div>
    Page Description: <%= book.description %>
</div>
<div class="form-row">
    <a class="btn btn-danger" href="/books/<%= book.id %>/edit"> Edit </a>
    <%-include('../partials/deleteForm', {url:`/books/${book.id}`})  %>
    <a class="btn btn-primary" href="/authors/<%= book.author.id%>"> View Author </a>
</div>