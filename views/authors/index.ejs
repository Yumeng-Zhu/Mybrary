<h2 class="page-header">Search Authors</h2>
<form action ="/authors" method="GET">
    <!-- <label>Name</label>
    <input type = "text" name = "name" value="<%= searchOptions.name %>">
    <button class="btn btn-primary" type="submit"> Search</button> -->
    <div class="form-row">
        <div class="form-item">
          <label>Name</label>
          <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <div class="form-item form-row-end">
            <button class="btn btn-primary" type="submit"> Search</button>
          </div>
    </div>    
</form>


<br>
<% authors.forEach(author => { %>
    <div class = "author-row">
        <div class = "author-name"> <%= author.name %></div>
        <div class = "btn-row"> 
            <a class="btn btn-primary" href="/authors/<%= author.id %>">View</a>
            <a class="btn btn-primary" href="/authors/<%= author.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm', {url: `/authors/${author.id}`}) %> 
            <!-- Use <%= %> when displaying user input or dynamic content to prevent security risks (XSS attacks). Use <%- %> only when you're sure the content is safe and should be rendered as actual HTML. -->
        </div>
    </div>
<% }) %>
    